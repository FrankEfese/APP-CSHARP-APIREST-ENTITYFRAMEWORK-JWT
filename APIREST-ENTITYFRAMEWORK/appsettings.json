{
    "Logging": {
        "LogLevel": {
            // Establece el nivel de registro predeterminado en "Information",
            // lo que significa que se registrarán mensajes informativos y de mayor severidad.
            "Default": "Information",
            // Configura el nivel de registro para los componentes de ASP.NET Core en "Warning",
            // registrando solo advertencias y errores, reduciendo así la verbosidad de los logs para estos componentes.
            "Microsoft.AspNetCore": "Warning"
        }
    },
    // Indica que la aplicación aceptará solicitudes de cualquier host.
    "AllowedHosts": "*",
    "Jwt": {
        // La clave secreta utilizada para firmar los tokens JWT.
        "Key": "una_clave_secreta_de_al_menos_32_caracteres",
        // Representa el emisor del token, es decir, la entidad que genera y firma el token.
        "Issuer": "EjemploIssuer",
        // Indica la audiencia prevista del token, es decir, los destinatarios o sistemas que deben aceptar y procesar el token.
        "Audience": "EjemploAudience"
    },
